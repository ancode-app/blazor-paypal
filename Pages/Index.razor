@page "/"

<h4>PayPal button</h4>
<div class="w-25 centerCard" style="align-items: center;">
    <div class="card">
        <div class="row">
            <div class="col-12">
                <div class="card border-0">
                    <img src="/img/spotify.png" class="img-thumbnail border-0" alt="ps5">
                    <div class="card-body">
                        <h5 class="card-title">Spotify Premium</h5>
                        <p class="card-text">Individual
                            R$ 14,30/mês após o período da oferta

                            1 conta
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="container">
                @if (!aprovado)
                {
                    <div id="paypal-button-container" class="shadow"></div>
                }
                else
                {
                    <img src="/img/ok.jpg" width="100" height="100" alt="ok">
                }
            </div>
        </div>
    </div>
</div>
